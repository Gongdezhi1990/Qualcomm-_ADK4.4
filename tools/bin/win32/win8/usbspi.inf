AddReg=USBSPI_Service.AddReg.NTx86

[USBSPI_Service.AddReg.NTx86]
HKR,"Parameters","FDName",0x00000,"USBSPI"

[USBSPI.AddReg.NTx86]
HKR,,DevLoader,,"*ntkern"
HKR,,NTMPDriver,,"usbspi.sys"

[USBSPI.NTx86]
usbspi.sys


