                            ShortId="VBATLimit1"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
                            DefaultValue="0x0087"/>
                        <ArrayElementConfigItem
                            Id="VBAT Limit 2"
                            ShortId="VBATLimit2"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
                            DefaultValue="0x0091"/>
                        <ArrayElementConfigItem
                            Id="VBAT Limit 3"
                            ShortId="VBATLimit3"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
                            DefaultValue="0x00FF"/>
                        <ArrayElementConfigItem
                            Id="VBAT Limit 4"
                            ShortId="VBATLimit4"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
                            DefaultValue="0x0000"/>
                        <ArrayElementConfigItem
                            Id="VBAT Limit 5"
                            ShortId="VBATLimit5"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
                            DefaultValue="0x0000"/>
                        <ArrayElementConfigItem
                            Id="VBAT Limit 6"
                            ShortId="VBATLimit6"
                            Desc="Battery Voltage Threshold (mV/POWER_VSCALE). 0xFF to indicate Limit End."
