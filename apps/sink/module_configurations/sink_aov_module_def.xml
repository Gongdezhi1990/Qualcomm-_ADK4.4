<ModuleData Name="sink_aov">
    <DefineGroup>
        <DefinePattern
            PatternName="Aov Phrase and Prompt Pattern"
            ShortId="aov_phrase_config_type">
            <ConfigItem
                Id="Aov Phrase Index"
                ShortId="aov_phrase_id"
                Desc="This column specifies the index of the Aov phrase and associated prompt file in the VM application file system. This field is autogenerated by the Configuration Tool and should not be directly written by the user."
                Type="uint"
                Size="8" />
        </DefinePattern>
        <DefineList
            Id="AoV User Events"
            ShortId="g_user_event">
            <enum key="Initate Voice Recognition"
                  value="0xCC"/>
            <enum key="Cycle Aov Phrase"
                  value="0xCD"/>
        </DefineList>
        <DefineStruct
            Id="AoV Config"
            ShortId="aov_config">
            <ConfigItem
                Id="Enabled"
                ShortId="enabled"
                Desc="If this is true then the always-on voice (AoV) functionality will be enabled in the application."
                Type="bool"
                Size="1">
            </ConfigItem>
        </DefineStruct>
    </DefineGroup>

<!-- ***************************************** Writeable config data ***************************************************** -->
    <ConfigGroup
        ShortId="sink_aov_writeable"
        Id="sink aov writeable"
        Node="Basic">
        <ConfigItem
            Id="AoV Enabled"
            ShortId="aov_enabled"
            Type="bool"
            DefaultValue="true"
            Size="1"
            ConfigGroupPath="./[@ShortId='aov']"
            Desc="If this is true then the Always on Voice (AoV) functionality will be enable in the application"> 
        </ConfigItem>    
        <ConfigItem
            Id="AoV Phrase Index"
            ShortId="aov_phrase_index"
            Type="int"     
            DefaultValue="0"
            Size="16"
            ConfigGroupPath="./[@ShortId='aov']"          
            Desc="The index of the phrase file to use after initialisation">
        </ConfigItem>
        <ConfigItem
            Id="AoV Graph Timeout [s]"
            ShortId="graph_timeout"
            Desc="If after triggering voice activation, no voice is detected within the AoV graph timeout, in seconds, the AoV graph will reset."
            Type="uint"
            Size="4"
            Range="Min=1,Max=15"
            ConfigGroupPath="./[@ShortId='aov']"
            DefaultValue="5" />
        <ConfigItem
            Id="AoV mapping table"
            ShortId="aov_mapping_table"
            Desc="This provide the item for the mapping table between phrase files and prompts."
            Type="uint"
            Size="16"
            DefaultValue="1"
            ConfigGroupPath="./[@ShortId='aov']/[@ShortId='generateAov']"/>
    </ConfigGroup>
    
        <ConfigGroup Id="AoV Phrase File and associated Audio Prompt File Mapping"
                 ShortId="sink_aovphrase"
                 Node="Array">
        <ConfigPatternArray
            Id="Aov Prompt"
            ShortId="aovPhrasesAndPrompts"
            Pattern="aov_phrase_config_type"
            MaxNumPatterns="5"
            ConfigGroupPath="./[@ShortId='aov']/[@ShortId='generateAov']">

            <PatternArrayRow Id="Aov_Phrase_0"
                             ShortId="aov_phrase_0"
                             Node="Basic">
                <PatternArrayConfigItem
                    ShortId="aov_phraseIndex"
                    DefaultValue="0" />
            </PatternArrayRow>

            <PatternArrayRow Id="Aov_Phrase_1"
                             ShortId="aov_phrase_1"
                             Node="Basic">
                <PatternArrayConfigItem
                    ShortId="aov_phraseIndex"
                    DefaultValue="1" />
            </PatternArrayRow>
        </ConfigPatternArray>
    </ConfigGroup>
</ModuleData>